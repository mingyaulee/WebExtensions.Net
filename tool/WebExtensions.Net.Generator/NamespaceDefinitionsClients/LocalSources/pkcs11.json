[
  {
    "namespace": "manifest",
    "types": [
      {
        "$extend": "OptionalPermission",
        "choices": [
          {
            "type": "string",
            "enum": [
              "pkcs11"
            ]
          }
        ]
      }
    ]
  },
  {
    "namespace": "pkcs11",
    "description": "PKCS#11 module management API",
    "permissions": [
      "pkcs11"
    ],
    "functions": [
      {
        "name": "isModuleInstalled",
        "description": "checks whether a PKCS#11 module, given by name, is installed",
        "async": true,
        "type": "function",
        "parameters": [
          {
            "name": "name",
            "type": "string"
          }
        ]
      },
      {
        "name": "installModule",
        "description": "Install a PKCS#11 module with a given name",
        "async": true,
        "type": "function",
        "parameters": [
          {
            "name": "name",
            "type": "string"
          },
          {
            "name": "flags",
            "optional": true,
            "type": "integer"
          }
        ]
      },
      {
        "name": "uninstallModule",
        "description": "Remove an installed PKCS#11 module from firefox",
        "async": true,
        "type": "function",
        "parameters": [
          {
            "name": "name",
            "type": "string"
          }
        ]
      },
      {
        "name": "getModuleSlots",
        "description": "Enumerate a module\u0027s slots, each with their name and whether a token is present",
        "async": true,
        "type": "function",
        "parameters": [
          {
            "name": "name",
            "type": "string"
          }
        ]
      }
    ]
  }
]